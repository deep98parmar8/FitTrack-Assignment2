extends layout

block content
  h1 Update Article below
  //Insert form
  form(method='POST' action='/update')
    div
        h2 Insert name
        input(type='text' name='name' value=article.name)
    div
        h2 Description
        input(type='text' name='description' value=article.description)
    div
        h2 Workout
        input(type='text' name='workout' value=article.workout)

    div
        h2 Mood
        input(type='text' name='mood' value=article.mood)

     div
